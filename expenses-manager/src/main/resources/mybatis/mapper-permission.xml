<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chentian.expenses.dao.PermissionDao">


	<select id="queryPermissionsByUser" resultType="com.chentian.expenses.bean.Permission">
		select
			*
		from t_permission
		where id in (
			select
				permissionid
			from t_role_permission
			where roleid in(
				select
					roleid
				from t_user_role
				where userid=#{id}
			)
		)
	</select>

	
	<insert id="insertPermission">
		insert into t_permission (
			name,url,pid,icon
		) values(
			#{name},#{url},#{pid},#{icon}
		)
	</insert>
	
	<update id="updatePermission">
		update t_permission
		set name=#{name},url=#{url}
		where id=#{id}
	</update>
	
	<delete id="deletePermission">
		delete from t_permission where id=#{id}
	</delete>
	


</mapper>